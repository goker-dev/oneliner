{
  "name": "kodkafa-pwa-template",
  "description": "this is kodkafa pwa template",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier -uw --cache --ignore-path .gitignore .",
    "preview": "vite preview",
    "localize": "npx i18next -c i18next-parser.config.ts",
    "pwa:assets": "pwa-assets-generator --preset minimal-2023 public/favicon.svg",
    "pwa:ss": "pnpm preview:test 'cypress run -C cypress-ss.config.ts -s cypress/e2e/screenshot.cy.ts' && mv cypress/screenshots/screenshot*/*.png public/",
    "pwa:build": "pnpm run pwa:assets && pnpm run pwa:ss && pnpm run build",
    "preview:test": "start-server-and-test preview http://localhost:4174",
    "test": "vitest",
    "test:e2e": "pnpm preview:test 'cypress open'",
    "test:e2e:headless": "pnpm preview:test 'cypress run'",
    "test:ci": "vitest run",
    "test:ci:lint": "pnpm run lint",
    "test:ci:e2e": "pnpm preview:test 'cypress run --record'",
    "validate": "pnpm run build && pnpm run --parallel /^test:ci/"
  },
  "dependencies": {
    "@kodkafa/eslint-config": "^1.0.4",
    "@vercel/analytics": "^1.1.2",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^14.0.1",
    "react-router-dom": "^6.21.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.15",
    "@types/react": "^18.2.51",
    "@types/react-dom": "^18.2.17",
    "@types/w3c-image-capture": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vite-pwa/assets-generator": "^0.2.4",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.17",
    "cypress": "^13.6.6",
    "eslint": "^8.56.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "i18next": "^23.8.2",
    "i18next-parser": "^8.12.0",
    "postcss": "^8.4.33",
    "sharp": "^0.33.2",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-pwa": "^0.19.0",
    "vitest": "^1.3.1",
    "workbox-core": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-window": "^7.0.0"
  }
}
